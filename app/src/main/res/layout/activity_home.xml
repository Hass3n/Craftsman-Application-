<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Home.Home"
        android:orientation="vertical"
        android:padding="10dp"
    android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonshapewhitebg"

       >
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bt_uisquare">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:background="@drawable/woke" />
        </LinearLayout>

    </Toolbar>
        <LinearLayout
            android:clipToPadding="false"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:orientation="vertical"
android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/Herafy"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:background="@drawable/bt_uisquare"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        app:srcCompat="@drawable/sabak"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#FCF7F7"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:text="حرفى"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="إذا كان لديك مهنةأضغط هنا "
                        android:padding="5dp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/Ameel"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/bt_uisquare"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        app:srcCompat="@drawable/cus"
                        android:padding="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#FCF7F7"
                        android:textSize="20dp"
                        android:layout_marginTop="10dp"
                        android:text="عميل"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="إذا كنت تريد الخدمات "
                        android:padding="5dp"
                        android:textColor="@android:color/white"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
</LinearLayout>