<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/profile_activityy"
        tools:context=".ClientProfileActivity">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/visit_profile_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:src="@drawable/profile_imagee" />

        <TextView
            android:id="@+id/visit_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/visit_profile_image"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="user name"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/visit_profile_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/visit_user_name"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:text="client place"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/visit_profile_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/visit_profile_place"
            android:layout_marginStart="15dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="15dp"
            android:text="client phone number"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/send_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/visit_profile_phone"
            android:layout_marginStart="65dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="65dp"
            android:textColor="@color/white"
            android:background="@drawable/buttonshape"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Send Message"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/decline_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/send_request_button"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="65dp"
            android:background="@drawable/buttonshape"
            android:text="رفض الطلب"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/call_request_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/decline_request_button"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/buttonshape"
            android:text="اتصال"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />


    </RelativeLayout>





</ScrollView>

